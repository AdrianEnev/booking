{
    "include": [
      "**/*",
      "**/.client/**/*",
      ".react-router/types/**/*"
    ],
    "compilerOptions": {
      "lib": ["DOM", "DOM.Iterable", "ES2022"],
      "types": ["vite/client"],
      "target": "ESNext",
      "module": "ESNext",
      "moduleResolution": "bundler",
      "jsx": "react-jsx",
      "rootDirs": [".", "./.react-router/types"],
      "baseUrl": ".",
      "paths": {
          "~/*": ["./app/*"],
          "@components/*": ["./app/components/*"],
          "@routes/*": ["./app/routes/*"],
          "@use/*": ["./app/use/*"],
          "@assets/*": ["./assets/*"],
          "@config/*": ["./config/*"],
      },
      "esModuleInterop": true,
      "verbatimModuleSyntax": true,
      "noEmit": true,
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "strict": true
    }
  }
  